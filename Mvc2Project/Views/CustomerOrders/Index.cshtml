@model CustomerOrderViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Orders</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }
    </style>
</head>
<body>
    <h1>Customer Information</h1>
    <p><strong>ID:</strong> @Model.Customer.Id</p>
    <p><strong>Name:</strong> @Model.Customer.FirstName @Model.Customer.LastName</p>                                                                                                      
    <p><strong>Email:</strong> @Model.Customer.Email</p>

    <h2>Order Details</h2>
    <table>
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var order in Model.Orders)
    {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.ProductName</td>
                    <td>@order.Price.ToString("C")</td>
                    <td>@order.Quantity</td>
                </tr>
    }
        </tbody>
    </table>
</body>
</html>